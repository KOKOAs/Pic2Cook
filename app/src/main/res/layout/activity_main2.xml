<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Main2Activity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/bg_black_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/op_wechat"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shut_down_wecaht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/skip_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:layout_marginLeft="255dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/contents_wechat">
        <ImageView
            android:id="@+id/l1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/pic2cook_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pic2Cook正在申请使用"
            android:layout_toRightOf="@id/l1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_light"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:id="@+id/appli"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appli"
            android:text="your Wechat profile pgoto, alias,
Region and gender information"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:id="@+id/author"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/author"
            android:textSize="14sp"
            android:id="@+id/author1"
            android:text="如果登录成功将会使用您的个人信息"
            android:textColor="@color/gray_light"
            android:layout_marginTop="20dp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/author1"
            android:alpha="0.2"
            android:background="@color/gray_light"
            android:id="@+id/v1"/>
        <com.example.pic2cook_develop.RoundImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/v1"
            android:layout_marginTop="8dp"
            android:id="@+id/wehay_selfie"
            android:src="@drawable/azumio"
            app:type="round"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@id/v1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25sp"
            android:layout_toRightOf="@id/wehay_selfie"
            android:text="爆裂魔法使~"
            android:textStyle="bold"
            android:id="@+id/magicboom"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/magicboom"
            android:src="@drawable/yes"
            android:layout_below="@id/v1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25sp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/wehay_selfie"
            android:alpha="0.2"
            android:background="@color/gray_light"
            android:id="@+id/v2"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/v2"
            android:src="@drawable/plus"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:id="@+id/plus_new_user"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@id/v2"
            android:layout_toRightOf="@id/plus_new_user"
            android:text="添加新的用户"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:id="@+id/add_new_t"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/add_new_t"
            android:layout_below="@id/v2"
            android:src="@drawable/next"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/nn"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/add_new_t"
            android:alpha="0.2"
            android:background="@color/gray_light"
            android:id="@+id/v3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v3"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/wechat_ly2">
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/green_round_button"
                android:text="同意"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/agree_wechat"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/gray_round_btn"
                android:text="取消"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/disagree_wechat"/>

        </LinearLayout>

















    </RelativeLayout>


</LinearLayout>