<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_black_light"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".login.Wechat_login">

    <TextView
        android:id="@+id/skip_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/wechat_ly1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/skip_wechat"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <com.example.pic2cook_develop.RoundImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:id="@+id/wehcat_pic2_icon"
            android:src="@mipmap/pic2cook_icon"
            app:type="round"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="登录Pic2Cook，享受现代烹饪"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rights_resolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="登录即代表您同意Pic2Cook《用户协议》与《隐私政策》"
            android:textColor="@color/gray_light"
            android:textSize="11sp"
            android:gravity="center"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/Use_wechat_to_log_in"
            android:layout_gravity="center"
            android:text="使用微信登录"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:background="@drawable/green_round_button"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/Use_phone_to_log_in"
            android:layout_gravity="center"
            android:text="使用手机登录"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_round_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/gray_light"
            android:text="使用其他登录方式"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/select_login_method"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp">
            <com.example.pic2cook_develop.RoundImageView
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/qzone"
                app:type="circle"/>
            <com.example.pic2cook_develop.RoundImageView
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_height="50dp"
                android:src="@drawable/touban"
                app:type="circle"/>
            <com.example.pic2cook_develop.RoundImageView
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_height="50dp"
                android:src="@drawable/weibo"
                app:type="circle"/>
            <com.example.pic2cook_develop.RoundImageView
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_height="50dp"
                android:src="@drawable/zhihu"
                app:type="circle"/>



        </LinearLayout>


    </LinearLayout>



</RelativeLayout>