<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/bg_black_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/bg_black_light"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/renqing_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="1"
            android:text="1"/>
        <com.example.pic2cook_develop.RoundImageView
            android:layout_width="40dp"
            android:id="@+id/renqing_sel"
            android:layout_height="40dp"
            android:src="@drawable/uploader01"
            app:type="circle"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/renqing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="2"
            android:text="友人A"/>

        <TextView
            android:id="@+id/renqing_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="2"
            android:text="100"/>

        <ImageView
            android:id="@+id/follow_or_not"
            android:layout_marginLeft="50dp"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/ff_in_ranks_unclick"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_dark"
        android:alpha="0.3"/>
</LinearLayout>